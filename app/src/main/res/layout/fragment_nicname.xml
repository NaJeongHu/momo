<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.intro.NicnameFragment">

    <TextView
        android:id="@+id/some_id"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:text="만들어주세요 :)"
        android:textSize="30sp"
        android:textColor="@color/main_color"
        android:fontFamily="@font/applesdgothicneom"
        android:lineSpacingExtra="3sp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="315dp"
        android:background="@drawable/custom_cardview_shape_nofill_gray"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_intro_nicname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:met_hideUnderline="true"
            android:background="@null"
            android:fontFamily="@font/applesdgothicneom"
            android:layout_marginStart="43dp"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:textSize="14sp"
            android:hint="닉네임"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gonext"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="412dp"
        android:background="@drawable/custom_cardview_shape_fill"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="다음"
            android:gravity="center"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</FrameLayout>