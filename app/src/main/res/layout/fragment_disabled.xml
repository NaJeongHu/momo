<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.intro.NicnameFragment">

    <TextView
        android:id="@+id/some_id"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:text="선택해주세요 :)"
        android:textSize="30sp"
        android:textColor="@color/main_color"
        android:fontFamily="@font/applesdgothicneom"
        android:lineSpacingExtra="3sp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="315dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_disabled_disabled"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:background="@drawable/custom_cardview_shape_nofill_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_disabled_disabled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="장애인"
                android:gravity="center"
                android:fontFamily="@font/applesdgothicneom"
                android:textSize="16sp"
                android:textColor="#838383"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_disabled_abled"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:background="@drawable/custom_cardview_shape_nofill_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_disabled_abled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="비장애인"
                android:gravity="center"
                android:fontFamily="@font/applesdgothicneom"
                android:textSize="16sp"
                android:textColor="#838383"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gonext"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="412dp"
        android:background="@drawable/custom_cardview_shape_fill"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="다음"
            android:gravity="center"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</FrameLayout>