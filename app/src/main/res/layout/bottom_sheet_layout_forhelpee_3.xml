<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_progress"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_loading.json"
        app:lottie_loop="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/some_id"
        android:layout_width="230dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:text="최대 10m 거리의 헬퍼에게\n도움을 요청하고 있어요!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/applesdgothicneom"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical" />

    <View
        android:id="@+id/union"
        android:layout_width="12.21dp"
        android:layout_height="12.21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="28.64dp"
        android:layout_marginTop="59.64dp"
        android:background="@drawable/icon_x" />

    <androidx.cardview.widget.CardView
        android:layout_width="372dp"
        android:layout_height="1.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="147dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/light_gray" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="181dp"
        android:text="요청사항"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/applesdgothicneob"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical" />

    <View
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:background="@color/light_gray"
        android:layout_marginTop="182dp"
        android:layout_marginLeft="84dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="99dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="181dp"
        android:text="병원에 데려다 주세요"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/applesdgothicneom"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:text="선택사항"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/applesdgothicneob"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:background="@color/light_gray"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="84dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="99dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:text="여 / 20~35세"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/applesdgothicneom"
        android:layout_marginBottom="57dp"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical" />

</RelativeLayout>