<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.intro.NicnameFragment">

    <TextView
        android:id="@+id/some_id"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:text="선택해주세요 :)"
        android:textSize="30sp"
        android:textColor="@color/main_color"
        android:fontFamily="@font/applesdgothicneom"
        android:lineSpacingExtra="3sp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:id="@+id/ll_disabled_datail_see"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="302dp"
        android:background="@drawable/custom_cardview_shape_nofill_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_disabled_datail_see"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="시각"
            android:gravity="center_vertical"
            android:layout_marginLeft="43dp"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="16sp"
            android:textColor="@color/gray_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_disabled_datail_hear"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="369dp"
        android:background="@drawable/custom_cardview_shape_nofill_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_disabled_datail_hear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="청각"
            android:gravity="center_vertical"
            android:layout_marginLeft="43dp"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="16sp"
            android:textColor="@color/gray_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_disabled_datail_brain"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="436dp"
        android:background="@drawable/custom_cardview_shape_nofill_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_disabled_datail_brain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="뇌병변"
            android:gravity="center_vertical"
            android:layout_marginLeft="43dp"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="16sp"
            android:textColor="@color/gray_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_disabled_datail_move"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="503dp"
        android:background="@drawable/custom_cardview_shape_nofill_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_disabled_datail_move"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="지체"
            android:gravity="center_vertical"
            android:layout_marginLeft="43dp"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="16sp"
            android:textColor="@color/gray_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="570dp"
        android:background="@drawable/custom_cardview_shape_nofill_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="43dp"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_intro_nicname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:met_hideUnderline="true"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneom"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:hint="기타 직접입력"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gonext"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="667dp"
        android:background="@drawable/custom_cardview_shape_fill"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="완료"
            android:gravity="center"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</FrameLayout>